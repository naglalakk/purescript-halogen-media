separator = 25px

html, body
  margin 0
  padding 0
  height 100%
  width 100%

body > div
  height 100%

.media-browser
  height 100%

.media
  display flex
  flex-wrap wrap
  padding-top separator
  padding-right separator
  padding-left separator

.media-item
  padding-right separator
  padding-bottom separator

.tabs
  display flex
  padding-left separator
  padding-right separator
  padding-top separator

.tab
  display flex
  justify-content center
  align-items center
  background-color #fff
  color #000
  width 150px
  height 30px
  text-align center
  margin-right separator
  border solid 0.5px #000
  transition all 1s

  &:hover
    background-color #000
    color #fff

.upload-container
  position relative
  margin-top separator
  margin-left separator
  margin-right separator

.dropbox
  overflow-y scroll
  position relative
  display flex
  border solid 0.5px #000
  justify-content center
  align-items center
  width 100%
  min-height 300px
  top 0

  &:after 
    content: "";
    display: table;
    clear: both;

.uploads
  display flex
  flex-wrap wrap
  position absolute
  top 0
  left 0

.upload-info
  word-wrap break-word

.upload-file
  margin 25px
  max-width 150px

.upload-thumbnail
  width 100%

  img
    width 100%

.upload-action
  margin-top separator

.button
  display flex
  justify-content center
  align-items center
  transition all 1s
  width 150px
  height 30px
  border solid 0.5px #000
  background-color #fff
  color #000

  &:hover
    background-color #000
    color #fff

